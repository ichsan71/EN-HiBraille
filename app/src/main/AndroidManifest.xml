<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.or.codelabs.belajarbraille">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".belajar_hijaiyah.BelajarHijaiyahActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".belajar_penggabungan.BelajarPenggabunganActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".belajar_tandabaca.BelajarTandaBacaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".latihan_hijaiyah.LatihanHijaiyahActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".latihan_penggabungan.LatihanPenggabunganActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".latihan_tandabaca.LatihanTandaBacaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".hijaiyah_detail.HijaiyahDetailActivity"
            android:parentActivityName=".belajar_hijaiyah.BelajarHijaiyahActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tandabaca_detail.TandaBacaDetailActivity"
            android:parentActivityName=".belajar_tandabaca.BelajarTandaBacaActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".penggabungan_detail.PenggabunganDetailActivity"
            android:parentActivityName=".belajar_penggabungan.BelajarPenggabunganActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ThemeSwitcherDialog"
            android:screenOrientation="portrait"/>
    </application>

</manifest>