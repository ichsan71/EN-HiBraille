<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@android:color/black"
    tools:context=".latihan_hijaiyah.LatihanHijaiyahActivity">

    <FrameLayout
        android:id="@+id/latihanhijaiyah_framelayout_soal"
        android:layout_width="280dp"
        android:layout_height="280dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/latihanhijaiyah_imageview_hijaiyah"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/alif"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/latihanhijaiyah_textview_nama_simbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="16sp"
                android:text="@string/belajar_braille_hijaiyah"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="@string/soal_latihan"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/latihanhijaiyah_framelayout_pesan_suara"
        android:layout_marginTop="16dp"
        android:layout_width="64dp"
        android:layout_height="64dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/active_braille_dot"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_voice_command"
            android:layout_gravity="center"/>
    </FrameLayout>

    <Button
        android:id="@+id/latihanhijaiyah_button_simbol_lain"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="48dp"
        android:background="@color/colorAccent"
        android:text="@string/latihan_simbol_hijaiyah_lain"
        android:textColorHint="@color/colorPrimaryDark" />
</LinearLayout>