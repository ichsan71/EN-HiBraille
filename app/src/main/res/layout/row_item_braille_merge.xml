<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/main_cardview_learn_hijaiyah"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/colorPrimaryDark"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/learnbraillemerge_imageview_braille_merge"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/learnbraillemerge_textview_symbol_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/learnbraillemerge_imageview_braille_merge"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/learn_braille_merge"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/learnbraillemerge_textview_symbol_spell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/learnbraillemerge_textview_symbol_name"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="@string/spell"
            android:textColor="@android:color/white"/>


        <TextView
            android:id="@+id/learnbraillemerge_textview_braille_dots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/learnbraillemerge_textview_symbol_spell"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/braille_dots"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>