<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@android:color/black"
    tools:context=".exercise_hijaiyah.ExerciseHijaiyahActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_exercise_hijaiyah"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:focusable="true"
        android:background="?attr/colorPrimary"
        android:theme="@style/MyActionBarTheme"/>

    <FrameLayout
        android:id="@+id/exercisehijaiyah_framelayout_question"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="16dp"
        android:focusable="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/exercisehijaiyah_imageview_hijaiyah"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/alif"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </FrameLayout>

    <ImageButton
        android:id="@+id/exercisehijaiyah_button_voice_message"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_voice_command"
        android:contentDescription="Pesan Suara"
        android:background="@drawable/active_braille_dot"/>

    <Button
        android:id="@+id/exercisehijaiyah_button_next_symbol"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:background="?attr/colorAccent"
        android:text="@string/next_hijaiyah_symbol"
        android:textColorHint="?attr/colorPrimaryDark" />
</LinearLayout>